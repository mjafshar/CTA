<div class="container">
  <h1>CTA Routes</h1>
  <%= @route.route_number %>

  <table class="table table-bordered table-striped">
    <tr>
      <th>Stop</th>
      <th>Street Name</th>
      <th>Cross Street</th>
      <th>Boardings</th>
      <th>Alightings</th>
      <th>Routes</th>
    </tr>
    <% @stops.each do |stop| %>
      <%= render 'stop_row', :stop => stop %>
    <% end %>
    <%= will_paginate @stop_pages %>
  </table>
</div>
